{
   "kind": "Pod",
   "metadata": {
      "labels": {
         "vendor": "jmccormick2001",
         "cluster": "{{.ClusterName}}"
      },
      "name": "{{.PodName}}",
      "namespace": "{{.Namespace}}"
   },
   "spec": {
      "containers": [
         {
            "name": "rqlite",
            "image": "jmccormick2001/rqlite:v0.0.1",
            "imagePullPolicy": "IfNotPresent",
            "ports": [
               {
                  "containerPort": 4001,
                  "name": "rqhttps",
                  "protocol": "TCP"
               }
            ],
            "volumeMounts": [
               {
                  "mountPath": "/rqlite/file",
                  "name": "rqlite-storage",
                  "readOnly": false
               }
            ]
         }
      ],
      "restartPolicy": "Always",
      "securityContext": {},
      "serviceAccount": "{{.ServiceAccount}}",
      "volumes": [
         {
            "name": "rqlite-storage",
            "emptyDir": {}
         }
      ]
   }
}
